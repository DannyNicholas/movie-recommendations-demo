{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ecs:CreateCluster",
        "ecs:DeregisterContainerInstance",
        "ecs:DiscoverPollEndpoint",
        "ecs:Poll",
        "ecs:RegisterContainerInstance",
        "ecs:StartTelemetrySession",
        "ecs:Submit*",
        "ecs:StartTask",
        "logs:*",
        "ecr:Get*",
        "*"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": ["kinesis:*", "dynamodb:*", "cloudwatch:PutMetricData", "s3:*"],
      "Resource": "*"
    }
  ]
}
